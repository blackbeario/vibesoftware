{{ attach_library('mahi/slider') }}
<div class="slider">
  <div class="container">
    <div class="splide" role="group" aria-label="webSite slider">
      <div class="splide__track">
        <ul class="splide__list">
          {% if slider_code != '' %}
            {{ slider_code | striptags('<ol>,<ul>,<li>,<p>,<a>,<img>,<video>,<audio>,<h1>,<h2>,<h3>,<h4>,<em>,<strong>,<br>,<i>,<div>,<span>,<button>,<mark>,<hr>,<del>,<sup>,<sub>,<svg>') | raw }}
          {% else %}
          <li class="splide__slide">
            <div class="slider-text">
              <h2>Let's Vibe!</h2>
              <p>Vibe Software provides a fresh take on creative digital projects.</p>
              <div><a class="button" href="#">Get Started</a> <a class="button-secondary" href="#">Read More</a></div>
            </div>
            <div class="slider-img">
              <img src="{{ directory }}/images/demo/slider1.svg" alt="Multipurpose Drupal theme" />
            </div>
          </li>
          <li class="splide__slide">
            <div class="slider-text">
              <h2>We Create Awesome Mobile Apps!</h2>
              <p>We specialize in <a href="https://vibesoftware.io/mobile-apps">custom mobile apps</a> for business products.</p>
            <div><a class="button" href="#">Mobile Apps</a></div>
            </div>
            <div class="slider-img">
              <img src="{{ directory }}/images/demo/slider2.svg" alt="Drupar Design Studio" />
            </div>
          </li>
          <li class="splide__slide">
            <div class="slider-text">
              <h2>We Create Unique Web Apps!</h2>
              <p>We build unique Web experiences that partner with our mobile apps, and standalone sites.</p>
            <div><a class="button" href="#">Web Apps</a></div>
            </div>
            <div class="slider-img">
              <img src="{{ directory }}/images/demo/slider3.svg" alt="Awesome Drupal Theme" />
            </div>
          </li>
          {% endif %}
        </ul>
      </div><!--/splide__track -->
    </div><!--/splide-->
  </div><!--/container-->
</div><!--/slider-->
<script>
  document.addEventListener( 'DOMContentLoaded', function() {
    var splide = new Splide( '.splide', {
      perPage: 1,
      autoplay: true,
      rewind: true,
      pauseOnHover: false,
      interval: 5000,
      arrowPath: 'M0.5 1L20 20.5L0.5 41.5',
    } );
    splide.mount();
  } );
</script>
